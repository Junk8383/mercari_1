.su_header
  %h3
    = link_to "","#"
    = embedded_svg("fmarket_logo_red.svg", class: "top-logo-svg") 
  %nav.progress-bar.signup-bar
    %ol.clearfix
      %li.active
        会員情報
        .place.t_place
      %li.not_active
        電話番号認証
        .place
      %li.not_active
        お届け先住所入力
        .place
      %li.not_active
        支払い方法
        .place
      %li.not_active
        完了
        .place.e_place
.su_main
  .su_main__box
    .su_main__box__title
      %h2 会員情報入力
    .su_main__box__contents
      .su_main__box__contents__form
        = form_for(resource, as: resource_name, url: phone_path(resource)) do |f|
          = render 'layouts/error_messages', model: f.object
          .su_main__box__contents__form__group
            = f.label :nickname, "ニックネーム"
            %span.form-require
              必須
            %br/
            = f.text_field :nickname, autofocus: true, autocomplete: "ニックネーム", class: "input-default has-error", placeholder: "例)メルカリ太郎"
          .su_main__box__contents__form__group
            = f.label :email, "メールアドレス"
            %span.form-require
              必須
            %br/
            = f.email_field :email, autocomplete: "メールアドレス", class: "input-default has-error", placeholder: "PC・携帯どちらでも可"
          .su_main__box__contents__form__group
            = f.label :password, "パスワード"
            %span.form-require
              必須
            %br/
            = f.password_field :password, autocomplete: "パスワード", class: "input-default has-error",id: "js-password", placeholder: "7文字以上の半角英数字"
            %p.form-info-text ※英字と数字の両方を含めて設定してください
            .form-password-confirm
              %label.check-box 
                %input#js-passcheck{type: "checkbox"}
                %span パスワードを表示する
          .su_main__box__contents__form__group
            %h3 本人確認
            %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
          .su_main__box__contents__form__group
            = f.label :family_name ,"お名前(全角)"
            %span.form-require
              必須
            %br/
            .half-block
              = f.text_field :family_name, class: "input-default half", placeholder: "例) 山田"
              = f.text_field :first_name, class: "input-default half", placeholder: "例) 彩"
          .su_main__box__contents__form__group
            = f.label :family_name_kana, "お名前カナ(全角)"
            %span.form-require
              必須
            %br/
            .half-block
              = f.text_field :family_name_kana, class: "input-default half", placeholder: "例) ヤマダ"
              = f.text_field :first_name_kana, class: "input-default half", placeholder: "例) アヤ"
          .su_main__box__contents__form__group
            = f.label :birth, "生年月日"
            %span.form-require
              必須
            %br/
            != sprintf(f.date_select(:birth, prefix:'user',with_css_classes:"input-default has-error", prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
          %p.form-info-text ※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
          .su_main__box__contents__form__alart
            %p.text 
            「次へ進む」のボタンを押すことにより、
            = link_to "利用規約","#"
            に同意したものとみなします
          .su_main__box__contents__form__submit
            = f.submit "次へ進む",class: "btn-default btn-red"
          .su_main__box__contents__form__group.text-right
            = link_to "本人情報の登録について>", "#"
          .su_main__box__contents__form__group.privacy_policy
            %p.This site is protected by reCAPTCHA and the Google 
            = link_to "Privacy Policy" 
            and 
            = link_to "Terms of Service" ,"#"
            apply.
.su_footer
  = render "items/sell_footer"